    <hz:hazelcast id="hazelCastInstance">
        <hz:config>
            <hz:cluster-name>dev</hz:cluster-name>
            <hz:properties>
                <hz:property name="hazelcast.initial.min.cluster.size">1</hz:property>
            </hz:properties>
<!--            <hz:cp-subsystem>-->
<!--                <hz:cp-member-count>5</hz:cp-member-count>-->
